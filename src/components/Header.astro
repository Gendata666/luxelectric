---
import { useState } from 'react';
---

<header class="bg-black text-white shadow-md sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
    <a href="/" class="text-2xl font-semibold uppercase">LuxElectric</a>

    <!-- Desktop Menu -->
    <div class="hidden md:flex space-x-10">
      <a href="#products" class="text-lg hover:text-gray-400">Models</a>
      <a href="#about" class="text-lg hover:text-gray-400">About</a>
      <a href="#contact" class="text-lg hover:text-gray-400">Contact</a>
    </div>

    <!-- Mobile Menu Icon -->
    <button class="md:hidden text-2xl" aria-label="Open menu" onclick="toggleMenu()">☰</button>

    <!-- Mobile Menu -->
    <div class="md:hidden absolute top-0 right-0 bg-black w-2/3 h-full transition-transform transform translate-x-full" id="mobile-menu">
      <div class="p-6 flex justify-between items-center">
        <a href="/" class="text-2xl font-semibold">LuxElectric</a>
        <button onclick="toggleMenu()">✖</button>
      </div>
      <div class="flex flex-col space-y-6 px-6 py-8 text-lg">
        <a href="#products" class="hover:text-gray-400">Models</a>
        <a href="#about" class="hover:text-gray-400">About</a>
        <a href="#contact" class="hover:text-gray-400">Contact</a>
      </div>
    </div>
  </nav>
</header>

<script>
  function toggleMenu() {
    const menu = document.getElementById("mobile-menu");
    const isOpen = menu.style.transform === "translateX(0%)";
    menu.style.transform = isOpen ? "translateX(100%)" : "translateX(0%)";
  }
</script>
